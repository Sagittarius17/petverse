/**
 * Core Philosophy:
 * This ruleset enforces a strict, user-centric security model combined with
 * support for public, community-driven content. The primary principle is that
 * users have complete control over their own data and content they create,
 * while certain data types like blogs and service listings are publicly readable
 * to foster a community environment.
 *
 * Data Structure:
 * The data is organized into two main categories:
 * 1. User-Private Data: All data strictly belonging to a user (like their
 *    profile and pet information) is nested under the `/users/{userId}` path.
 * 2. Public Collections: Top-level collections like `/blogs`, `/categories`,
 *    `/vet_services`, and `/lost_found_reports` store data intended for public
 *    consumption.
 *
 * Key Security Decisions:
 * - Strict Ownership: A user can only access data within their own
 *   `/users/{userId}` document tree.
 * - Role-Based Access Control (RBAC): User permissions are determined by a 'role'
 *   field ('User', 'Superuser', 'Admin', 'Superadmin') on their user document.
 * - Superadmin has full CRUD access to all data.
 * - Admin can manage Superusers and Users.
 * - Superuser can manage Users.
 * - Public Read, Owner Write: For public collections, read access is granted
 *   to everyone, but write operations are strictly limited to the document's author.
 * - Inactive users have no access to any data.
 *
 * Denormalization for Authorization:
 * To ensure fast and secure authorization, this ruleset relies on denormalized
 * ownership fields (e.g., `authorId`, `userId`) directly within documents in
 * public collections. This avoids slow and insecure cross-document `get()`
 * calls in rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to simplify and clarify rule logic.

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Function to get data from a user's document.
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function getRole(userId) {
      return getUserData(userId).role;
    }

    // Check if user is active
    function isActive(userId) {
      return getUserData(userId).status == 'Active';
    }
    
    function isSuperadmin(userId) {
      return isSignedIn() && getRole(userId) == 'Superadmin';
    }
    
    function isAdmin(userId) {
      return isSignedIn() && (getRole(userId) == 'Admin' || isSuperadmin(userId));
    }
    
    function isSuperuser(userId) {
      return isSignedIn() && (getRole(userId) == 'Superuser' || isAdmin(userId));
    }
    
    function canReadUsers(userId) {
      // Allows admins and superadmins to read any user profile.
      return isAdmin(userId);
    }
    
    function canManageRole(requestingUserId, targetUserId, targetRole) {
      let requesterRole = getRole(requestingUserId);
      let targetCurrentRole = getRole(targetUserId);

      // Superadmins can manage anyone.
      if (requesterRole == 'Superadmin') {
        return true;
      }
      // Admins cannot manage Superadmins or other Admins.
      if (requesterRole == 'Admin') {
        return targetCurrentRole != 'Admin' && targetCurrentRole != 'Superadmin';
      }
      // Superusers can only manage Users.
      if (requesterRole == 'Superuser') {
        return targetCurrentRole == 'User';
      }
      return false;
    }

    function createdByAuthenticatedUser(fieldName) {
      return isSignedIn() && isActive(request.auth.uid) && request.resource.data[fieldName] == request.auth.uid;
    }

    function isImmutable(fieldName) {
      return request.resource.data[fieldName] == resource.data[fieldName];
    }

    match /users/{userId} {
      allow get: if (isOwner(userId) || canReadUsers(request.auth.uid)) && isActive(request.auth.uid);
      allow list: if isSuperuser(request.auth.uid) && isActive(request.auth.uid);
      allow create: if isOwner(userId);
      // More granular update rule
      allow update: if isActive(request.auth.uid) && 
                      (isOwner(userId) || canManageRole(request.auth.uid, userId, request.resource.data.role));
      // Deletes are disallowed. Status should be set to 'Inactive' via an update.
      allow delete: if false; 
    }

    match /users/{userId}/pets/{petId} {
      allow get: if isOwner(userId) && isActive(request.auth.uid);
      allow list: if isOwner(userId) && isActive(request.auth.uid);
      allow create: if isOwner(userId) && request.resource.data.userId == userId && isActive(request.auth.uid);
      allow update: if isOwner(userId) && isImmutable('userId') && isActive(request.auth.uid);
      allow delete: if isOwner(userId) && isActive(request.auth.uid);
    }

    match /blogs/{blogId} {
      allow get: if true;
      allow list: if true;
      allow create: if createdByAuthenticatedUser('authorId');
      allow update: if isOwner(resource.data.authorId) && isImmutable('authorId') && isActive(request.auth.uid);
      allow delete: if isOwner(resource.data.authorId) && isActive(request.auth.uid);
    }

    match /categories/{categoryId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    match /vet_services/{vetServiceId} {
      allow get: if true;
      allow list: if true;
      allow create: if createdByAuthenticatedUser('userId');
      allow update: if isOwner(resource.data.userId) && isImmutable('userId') && isActive(request.auth.uid);
      allow delete: if isOwner(resource.data.userId) && isActive(request.auth.uid);
    }

    match /lost_found_reports/{lostFoundReportId} {
      allow get: if true;
      allow list: if true;
      allow create: if createdByAuthenticatedUser('userId');
      allow update: if isOwner(resource.data.userId) && isImmutable('userId') && isActive(request.auth.uid);
      allow delete: if isOwner(resource.data.userId) && isActive(request.auth.uid);
    }

    match /activities/{activityId} {
      allow get, list: if isSuperuser(request.auth.uid) && isActive(request.auth.uid);
      allow create: if isSuperuser(request.auth.uid) && isActive(request.auth.uid);
      allow update, delete: if false;
    }
  }
}
