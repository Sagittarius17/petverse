/**
 * Core Philosophy:
 * This ruleset enforces a strict, user-centric security model combined with
 * support for public, community-driven content. The primary principle is that
 * users have complete control over their own data and content they create,
 * while certain data types like blogs and service listings are publicly readable
 * to foster a community environment.
 *
 * Data Structure:
 * The data is organized into two main categories:
 * 1. User-Private Data: All data strictly belonging to a user (like their
 *    profile and pet information) is nested under the `/users/{userId}` path.
 * 2. Public Collections: Top-level collections like `/blogs`, `/categories`,
 *    `/vet_services`, and `/lost_found_reports` store data intended for public
 *    consumption.
 *
 * Key Security Decisions:
 * - Strict Ownership: A user can only access data within their own
 *   `/users/{userId}` document tree.
 * - Role-Based Access Control (RBAC): User permissions are determined by a 'role'
 *   field ('User', 'Superuser', 'Admin') on their user document.
 * - Admin role has full CRUD access.
 * - Superuser role has create/update access but not delete.
 * - User role has no access to the admin panel.
 * - Public Read, Owner Write: For public collections, read access is granted
 *   to everyone, but write operations are strictly limited to the document's author.
 * - Inactive users have no access to any data.
 *
 * Denormalization for Authorization:
 * To ensure fast and secure authorization, this ruleset relies on denormalized
 * ownership fields (e.g., `authorId`, `userId`) directly within documents in
 * public collections. This avoids slow and insecure cross-document `get()`
 * calls in rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to simplify and clarify rule logic.

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Function to get data from a user's document.
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function getUserRole(userId) {
      return getUserData(userId).role;
    }
    
    // Check if user is active
    function isActive(userId) {
      return getUserData(userId).status == 'Active';
    }

    function isAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'Admin';
    }
    
    function isSuperuser() {
      return isSignedIn() && (getUserRole(request.auth.uid) == 'Superuser' || isAdmin());
    }

    function createdByAuthenticatedUser(fieldName) {
      return isSignedIn() && isActive(request.auth.uid) && request.resource.data[fieldName] == request.auth.uid;
    }

    function isImmutable(fieldName) {
      return request.resource.data[fieldName] == resource.data[fieldName];
    }
    
    function canUpdateUser(userId) {
        let requestingUserRole = getUserRole(request.auth.uid);
        let targetUserRole = resource.data.role;

        // Admins can edit anyone.
        if (requestingUserRole == 'Admin') {
            return true;
        }
        // Superusers can edit Users, but not other Superusers or Admins.
        if (requestingUserRole == 'Superuser' && targetUserRole == 'User') {
            return true;
        }
        // Users can only edit their own profiles.
        return isOwner(userId);
    }


    match /users/{userId} {
      // Admins and Superusers can see the list of users.
      allow list: if isSuperuser() || isAdmin();
      // Users can only read their own profile. Admins/Superusers can read any.
      allow get: if (isOwner(userId) || isSuperuser() || isAdmin()) && isActive(userId);
      // Anyone can create their own user document.
      allow create: if isOwner(userId);
      // Admin can update any user. Superuser can update 'User' roles. Users can update their own profile.
      allow update: if canUpdateUser(userId) && isActive(request.auth.uid);
      // Only Admins can delete users.
      allow delete: if false; // Disallow hard deletes. Status should be set to 'Inactive' via update.
    }

    match /users/{userId}/pets/{petId} {
      allow get: if isOwner(userId) && isActive(userId);
      allow list: if isOwner(userId) && isActive(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId && isActive(userId);
      allow update: if isOwner(userId) && isImmutable('userId') && isActive(userId);
      allow delete: if isOwner(userId) && isActive(userId);
    }

    match /blogs/{blogId} {
      allow get: if true;
      allow list: if true;
      allow create: if createdByAuthenticatedUser('authorId');
      allow update: if isOwner(resource.data.authorId) && isImmutable('authorId') && isActive(request.auth.uid);
      allow delete: if isOwner(resource.data.authorId) && isActive(request.auth.uid);
    }

    match /categories/{categoryId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    match /vet_services/{vetServiceId} {
      allow get: if true;
      allow list: if true;
      allow create: if createdByAuthenticatedUser('userId');
      allow update: if isOwner(resource.data.userId) && isImmutable('userId') && isActive(request.auth.uid);
      allow delete: if isOwner(resource.data.userId) && isActive(request.auth.uid);
    }

    match /lost_found_reports/{lostFoundReportId} {
      update: if isOwner(resource.data.userId) && isImmutable('userId') && isActive(request.auth.uid);
      delete: if isOwner(resource.data.userId) && isActive(request.auth.uid);
      allow get: if true;
      allow list: if true;
      allow create: if createdByAuthenticatedUser('userId');
    }
  }
}
