
/**
 * Core Philosophy:
 * This ruleset enforces a strict, user-centric security model combined with
 * support for public, community-driven content. The primary principle is that
 * users have complete control over their own data and content they create,
 * while certain data types like blogs and service listings are publicly readable
 * to foster a community environment.
 *
 * Data Structure:
 * The data is organized into two main categories:
 * 1. User-Private Data: All data strictly belonging to a user (like their
 *    profile and pet information) is nested under the `/users/{userId}` path.
 * 2. Public Collections: Top-level collections like `/blogs`, `/categories`,
 *    `/vet_services`, and `/lost_found_reports` store data intended for public
 *    consumption.
 *
 * Key Security Decisions:
 * - Strict Ownership: A user can only access data within their own
 *   `/users/{userId}` document tree.
 * - Role-Based Access Control (RBAC): User permissions are determined by a 'role'
 *   field ('User', 'Superuser', 'Admin', 'Superadmin') on their user document.
 * - Superadmin has full CRUD access to all data.
 * - Admin can manage Superusers and Users.
 * - Superuser can manage Users.
 * - Public Read, Owner Write: For public collections, read access is granted
 *   to everyone, but write operations are strictly limited to the document's author.
 * - Inactive users have no access to any data.
 *
 * Denormalization for Authorization:
 * To ensure fast and secure authorization, this ruleset relies on denormalized
 * ownership fields (e.g., `authorId`, `userId`) directly within documents in
 * public collections. This avoids slow and insecure cross-document `get()`
 * calls in rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ─────────────────────────────
       AUTHENTICATION HELPERS
    ───────────────────────────── */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function userDoc(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isActive(userId) {
      return userDoc(userId).status == 'Active';
    }

    /* ─────────────────────────────
       ROLE HELPERS (RBAC)
    ───────────────────────────── */

    function role(userId) {
      return userDoc(userId).role;
    }

    function isSuperadmin(userId) {
      return role(userId) == 'Superadmin';
    }

    function isAdmin(userId) {
      return role(userId) == 'Admin' || isSuperadmin(userId);
    }

    function isSuperuser(userId) {
      return role(userId) == 'Superuser' || isAdmin(userId);
    }

    /* ─────────────────────────────
       ROLE MANAGEMENT RULE
       (NO if / let / blocks)
    ───────────────────────────── */

    function canManageUser(requesterId, targetId) {
      return
        // Superadmin → everyone
        isSuperadmin(requesterId)

        ||

        // Admin → Users & Superusers
        (
          role(requesterId) == 'Admin' &&
          role(targetId) != 'Admin' &&
          role(targetId) != 'Superadmin'
        )

        ||

        // Superuser → Users only
        (
          role(requesterId) == 'Superuser' &&
          role(targetId) == 'User'
        );
    }

    /* ─────────────────────────────
       COMMON WRITE VALIDATORS
    ───────────────────────────── */

    function createdBy(field) {
      return
        isSignedIn() &&
        isActive(request.auth.uid) &&
        request.resource.data[field] == request.auth.uid;
    }

    function immutable(field) {
      return request.resource.data[field] == resource.data[field];
    }

    /* ─────────────────────────────
       USERS COLLECTION
    ───────────────────────────── */

    match /users/{userId} {

      // Anyone can read a user's public profile data (for usernames, etc.)
      allow get: if true;

      // Only Superusers & above can list all users
      allow list: if
        isSignedIn() &&
        isActive(request.auth.uid) &&
        isSuperuser(request.auth.uid);

      // User can create only their own doc
      allow create: if
        isOwner(userId);

      // Owner OR role managers can update
      allow update: if
        isSignedIn() &&
        isActive(request.auth.uid) &&
        (
          isOwner(userId) ||
          canManageUser(request.auth.uid, userId)
        );

      // Hard delete disabled (soft delete only)
      allow delete: if false;
    }

    /* ─────────────────────────────
       USER PETS (PRIVATE DATA)
    ───────────────────────────── */

    match /users/{userId}/pets/{petId} {
      allow read, list: if
        isOwner(userId) &&
        isActive(request.auth.uid);

      allow create: if
        isOwner(userId) &&
        isActive(request.auth.uid) &&
        request.resource.data.userId == userId;

      allow update: if
        isOwner(userId) &&
        isActive(request.auth.uid) &&
        immutable('userId');

      allow delete: if
        isOwner(userId) &&
        isActive(request.auth.uid);
    }
    
    /* ─────────────────────────────
       USER FAVORITE BREEDS (PRIVATE DATA)
    ───────────────────────────── */
    match /users/{userId}/favoriteBreeds/{breedId} {
        allow read, write: if 
            isSignedIn() &&
            isActive(request.auth.uid) &&
            isOwner(userId);
    }

    /* ─────────────────────────────
       PETS (PUBLIC CONTENT)
    ───────────────────────────── */
    
    match /pets/{petId} {
      allow get, list: if true;
      allow create: if createdBy('userId');
      allow delete: if 
        (isSignedIn() && isSuperuser(request.auth.uid)) ||
        (isSignedIn() && request.auth.uid == resource.data.userId);
        
      allow update: if 
        (isSignedIn() && isSuperuser(request.auth.uid)) ||
        (isSignedIn() && request.auth.uid == resource.data.userId && immutable('userId')) ||
        (
          request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['viewCount'])
        );
    }

    /* ─────────────────────────────
       BLOGS (PUBLIC CONTENT)
    ───────────────────────────── */

    match /blogs/{blogId} {
      // Anyone can GET a specific blog post, regardless of status.
      // This allows direct linking to a draft for preview purposes by admins.
      allow get: if true;
      
      // Anyone can LIST blogs, but ONLY if they are querying for 'Published' posts.
      // This is secure because the rule guarantees that any list query will only
      // return documents that meet this condition.
      allow list: if request.query.get('where', [['status', '==', 'Published']])[0][2] == 'Published';

      allow create: if
        isSignedIn() && isSuperuser(request.auth.uid);

      allow update, delete: if
        isSignedIn() &&
        isActive(request.auth.uid) &&
        (request.auth.uid == resource.data.authorId || isSuperadmin(request.auth.uid));
    }

    /* ─────────────────────────────
       CATEGORIES (READ-ONLY)
    ───────────────────────────── */

    match /categories/{categoryId} {
      allow read, list: if true;
      allow write: if false;
    }
    
    /* ─────────────────────────────
       NOTIFICATIONS
    ───────────────────────────── */
    match /notifications/{notificationId} {
      allow read, list: if true;
      allow create: if isSignedIn() && isActive(request.auth.uid);
      allow update, delete: if false; // Notifications are immutable
    }

    /* ─────────────────────────────
       VET SERVICES (PUBLIC LISTINGS)
    ───────────────────────────── */

    match /vet_services/{serviceId} {
      allow read, list: if true;

      allow create: if
        createdBy('userId');

      allow update: if
        isSignedIn() &&
        isActive(request.auth.uid) &&
        request.auth.uid == resource.data.userId &&
        immutable('userId');

      allow delete: if
        isSignedIn() &&
        isActive(request.auth.uid) &&
        request.auth.uid == resource.data.userId;
    }

    /* ─────────────────────────────
       LOST & FOUND REPORTS
    ───────────────────────────── */

    match /lost_found_reports/{reportId} {
      allow read, list: if true;

      allow create: if
        createdBy('userId');

      allow update: if
        isSignedIn() &&
        isActive(request.auth.uid) &&
        request.auth.uid == resource.data.userId &&
        immutable('userId');

      allow delete: if
        isSignedIn() &&
        isActive(request.auth.uid) &&
        request.auth.uid == resource.data.userId;
    }

    /* ─────────────────────────────
       ACTIVITIES (ADMIN LOGS)
    ───────────────────────────── */

    match /activities/{activityId} {
      allow read, list, create: if
        isSignedIn() &&
        isActive(request.auth.uid) &&
        isSuperuser(request.auth.uid);

      allow update, delete: if false;
    }

    /* ─────────────────────────────
       ANIMAL BREEDS (PUBLIC)
    ───────────────────────────── */

    match /animalBreeds/{breedId} {
      allow read, list: if true;
      allow create, update, delete: if isSignedIn() && isSuperuser(request.auth.uid);
    }
    
    /* ─────────────────────────────
       CONVERSATIONS & MESSAGES
    ───────────────────────────── */

    function isParticipant(conversationId) {
      return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
    }
    
    function isParticipantInRequest(requestData) {
      return isSignedIn() && request.auth.uid in requestData.participants;
    }

    match /conversations/{conversationId} {
      allow get: if isParticipant(conversationId);
      allow list: if isSignedIn() && request.query.where.get('participants', 'array-contains', request.auth.uid)[2] == request.auth.uid;
      
      allow write: if isParticipantInRequest(request.resource.data);

      allow delete: if false;

      match /messages/{messageId} {
        allow read, list: if isParticipant(conversationId);
        allow create: if isParticipant(conversationId) && createdBy('senderId');
        allow update, delete: if false;
      }
    }
  }
}

    