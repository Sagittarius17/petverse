
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ─────────────────────────────
       AUTHENTICATION HELPERS
    ───────────────────────────── */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function userDoc(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isActive(userId) {
      return userDoc(userId).status == 'Active';
    }

    /* ─────────────────────────────
       ROLE HELPERS (RBAC)
    ───────────────────────────── */

    function role(userId) {
      return userDoc(userId).role;
    }

    function isSuperadmin(userId) {
      return role(userId) == 'Superadmin';
    }

    function isAdmin(userId) {
      return role(userId) == 'Admin' || isSuperadmin(userId);
    }

    function isSuperuser(userId) {
      return role(userId) == 'Superuser' || isAdmin(userId);
    }

    /* ─────────────────────────────
       ROLE MANAGEMENT RULE
       (Takes resource to avoid self-read in update)
    ───────────────────────────── */
    
    function canManageUser(requesterId, targetUserResource) {
      let targetRole = targetUserResource.data.role;
      return
        isSuperadmin(requesterId)
        ||
        (
          role(requesterId) == 'Admin' &&
          targetRole != 'Admin' &&
          targetRole != 'Superadmin'
        )
        ||
        (
          role(requesterId) == 'Superuser' &&
          targetRole == 'User'
        );
    }


    /* ─────────────────────────────
       COMMON WRITE VALIDATORS
    ───────────────────────────── */

    function createdBy(field) {
      return
        isSignedIn() &&
        isActive(request.auth.uid) &&
        request.resource.data[field] == request.auth.uid;
    }

    function immutable(field) {
      return request.resource.data[field] == resource.data[field];
    }

    /* ─────────────────────────────
       USERS COLLECTION
    ───────────────────────────── */

    match /users/{userId} {

      // Anyone can read a user's public profile data (for usernames, etc.)
      allow get: if true;

      // Only Superusers & above can list all users.
      // NOTE: This rule is intentionally broad (isSignedIn()) because Firestore `list` rules cannot
      // perform `get()` operations to check a user's role from another document.
      // The application UI layer MUST enforce that only Superusers and above can access the user list page.
      allow list: if
        isSignedIn() && isSuperuser(request.auth.uid);

      // User can create only their own doc
      allow create: if
        isOwner(userId);

      // Owner OR role managers can update
      allow update: if
        isSignedIn() &&
        (
          // Case 1: Owner is updating their own non-privileged profile data.
          (
            isOwner(userId) &&
            isActive(userId) &&
            !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status'])
          )
          ||
          // Case 2: A privileged user is managing another user.
          (
            isActive(request.auth.uid) && // Check if the ADMIN is active
            canManageUser(request.auth.uid, resource) // Pass the resource, not userId
          )
        );

      // Hard delete disabled (soft delete only)
      allow delete: if false;
      
      /* ─────────────────────────────
        USER SUBCOLLECTIONS
      ───────────────────────────── */

      match /orders/{orderId} {
        allow read, list: if isOwner(userId);
        allow update, delete: if isOwner(userId) || isSuperuser(request.auth.uid);
      }
      
      match /pets/{petId} {
        allow read, list: if
          isOwner(userId) &&
          isActive(request.auth.uid);

        allow create: if
          isOwner(userId) &&
          isActive(request.auth.uid) &&
          request.resource.data.userId == userId;

        allow update: if
          isOwner(userId) &&
          isActive(request.auth.uid) &&
          immutable('userId');

        allow delete: if
          isOwner(userId) &&
          isActive(request.auth.uid);
      }
      
      match /favoriteBreeds/{breedId} {
          allow read, write: if 
              isSignedIn() &&
              isActive(request.auth.uid) &&
              isOwner(userId);
      }
    }

    /* ─────────────────────────────
       PETS (PUBLIC CONTENT)
    ───────────────────────────── */
    
    match /pets/{petId} {
      allow get, list: if true;
      allow create: if createdBy('userId');
      allow delete: if 
        (isSignedIn() && isSuperuser(request.auth.uid)) ||
        (isSignedIn() && request.auth.uid == resource.data.userId);
        
      allow update: if 
        (isSignedIn() && isSuperuser(request.auth.uid)) ||
        (isSignedIn() && request.auth.uid == resource.data.userId && immutable('userId')) ||
        (
          request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['viewCount'])
        );
    }

    /* ─────────────────────────────
       BLOGS (PUBLIC CONTENT)
    ───────────────────────────── */

    match /blogs/{blogId} {
      allow get: if true;
      allow list: if true;

      allow create: if
        isSignedIn() && isSuperuser(request.auth.uid);

      allow update, delete: if
        isSignedIn() &&
        isActive(request.auth.uid) &&
        (request.auth.uid == resource.data.authorId || isSuperadmin(request.auth.uid));
    }

    /* ─────────────────────────────
       CATEGORIES (READ-ONLY)
    ───────────────────────────── */

    match /categories/{categoryId} {
      allow read, list: if true;
      allow write: if false;
    }
    
    /* ─────────────────────────────
       NOTIFICATIONS
    ───────────────────────────── */
    match /notifications/{notificationId} {
      allow read, list: if true;
      allow create: if isSignedIn() && isActive(request.auth.uid);
      allow update, delete: if false; // Notifications are immutable
    }

    /* ─────────────────────────────
       VET SERVICES (PUBLIC LISTINGS)
    ───────────────────────────── */

    match /vet_services/{serviceId} {
      allow read, list: if true;

      allow create: if
        createdBy('userId');

      allow update: if
        isSignedIn() &&
        isActive(request.auth.uid) &&
        request.auth.uid == resource.data.userId &&
        immutable('userId');

      allow delete: if
        isSignedIn() &&
        isActive(request.auth.uid) &&
        request.auth.uid == resource.data.userId;
    }

    /* ─────────────────────────────
       LOST & FOUND REPORTS
    ───────────────────────────── */

    match /lost_found_reports/{reportId} {
      allow read, list: if true;

      allow create: if
        createdBy('userId');

      allow update: if
        isSignedIn() &&
        isActive(request.auth.uid) &&
        request.auth.uid == resource.data.userId &&
        immutable('userId');

      allow delete: if
        isSignedIn() &&
        isActive(request.auth.uid) &&
        request.auth.uid == resource.data.userId;
    }

    /* ─────────────────────────────
       ACTIVITIES (ADMIN LOGS)
    ───────────────────────────── */

    match /activities/{activityId} {
      allow read, list, create: if
        isSignedIn() &&
        isActive(request.auth.uid) &&
        isSuperuser(request.auth.uid);

      allow update, delete: if false;
    }

    /* ─────────────────────────────
       ANIMAL BREEDS (PUBLIC)
    ───────────────────────────── */

    match /animalBreeds/{breedId} {
      allow read, list: if true;
      allow create, update, delete: if isSignedIn() && isSuperuser(request.auth.uid);
    }

    /* ─────────────────────────────
       USERNAMES (FOR UNIQUENESS)
    ───────────────────────────── */
    match /usernames/{username} {
      allow get: if true;

      // Allow write (create, delete) only if the user is authenticated and the UID in the document
      // matches the authenticated user's UID. This handles both creating a new username doc
      // and deleting the old one in a transaction.
      allow write: if 
        request.auth.uid != null &&
        // For CREATE: The new document's UID must match the user's UID.
        // For DELETE: This part is irrelevant as request.resource is null.
        (request.resource == null || request.resource.data.uid == request.auth.uid) &&
        // For DELETE: The existing document's UID must match the user's UID.
        // For CREATE: This part is irrelevant as resource is null.
        (resource == null || resource.data.uid == request.auth.uid);
    }
    
    /* ─────────────────────────────
       CONVERSATIONS & MESSAGES
    ───────────────────────────── */

    function isParticipant(conversationId) {
      return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
    }
    
    function isParticipantInRequest(requestData) {
      return isSignedIn() && request.auth.uid in requestData.participants;
    }

    match /conversations/{conversationId} {
      allow get: if isParticipant(conversationId);
      allow list: if isSignedIn() && request.query.where.get('participants', 'array-contains', request.auth.uid)[2] == request.auth.uid;
      
      allow write: if isParticipantInRequest(request.resource.data);

      allow delete: if false;

      match /messages/{messageId} {
        allow read, list: if isParticipant(conversationId);
        allow create: if isParticipant(conversationId) && createdBy('senderId');
        allow update, delete: if false;
      }
    }
    
    /* ─────────────────────────────
       SETTINGS (GLOBAL)
    ───────────────────────────── */
    match /settings/{settingId} {
      // Anyone can read the settings to check for maintenance mode.
      allow read: if true;
      
      // Only admins and superadmins can change the settings.
      allow write: if isSignedIn() && isSuperuser(request.auth.uid);
    }
  }
}
